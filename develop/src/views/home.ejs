<!DOCTYPE html>
<html lang="es">
    
    <!-- HEAD -->
    <%- include('./partials/head') %> 

<body class="home">

<!-- HEADER -->
<%- include('./partials/header') %> 

    <main>

        <!-- CARRUSEL -->
        <section class="carousel-container">

            <div class="slides fade">
                <img src="/images/banner1.jpg" alt="">
            </div>

            <div class="slides fade">
                <img src="/images/banner2.jpg" alt="">
            </div>

            <div class="slides fade">
                <img src="/images/banner3.jpg" alt="">
            </div>

            <div class="slides fade">
                <img src="/images/banner1.jpg" alt="">
            </div>

            <!-- Botones siguiente y anterior -->
            <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
            <a class="next" onclick="plusSlides(1)">&#10095;</a>

            <!-- Puntos -->
            <div class="dots">
                <span class="dot" onclick="currentSlide(1)"></span>
                <span class="dot" onclick="currentSlide(2)"></span>
                <span class="dot" onclick="currentSlide(3)"></span>
                <span class="dot" onclick="currentSlide(4)"></span>
            </div>
        </section>
        <!-- FIN CARRUSEL -->

        <section class="body">

            <!-- CATEGORIAS -->
            <h3>Categorías</h3>

            <div class="slider">

                <div class="circulo">
                    <a href="/products/category/3"><img class="loro" src="/images/loro.png" alt=""></a>
                </div>
                <div class="circulo">
                    <a href="/products/category/1"><img class="perro" src="/images/perro.png" alt=""></a>
                </div>
                <div class="circulo-gato">
                    <a href="/products/category/2"><img class="gato" src="/images/gato.png" alt=""></a>
                </div>
                <div class="circulo-reptil">
                    <a href="/products/category/4"><img class="reptil" src="/images/reptil.png" alt=""></a>
                </div>

            </div>

            <!-- Puntos -->
            <div class="dots">
                <span class="dot" onclick="currentSlide(1)"></span>
                <span class="dot" onclick="currentSlide(2)"></span>
            </div>
            <!-- FIN CATEGORIAS -->

             <!-- COMUNIDAD -->
            <div class="comunidad">

                <div class="comunidad-alimentacion">
                    <a href="">
                        <h2>ALIMENTACIÓN</h2><img src="/images/alimentacion.png" alt="">
                    </a>
                </div>

                <div class="comunidad-comunidad">
                    <a href="">
                        <h2>COMUNIDAD</h2><img src="/images/comunidad.png" alt="">
                    </a>
                </div>

                <div class="comunidad-quienes-somos">
                    <a href="">
                        <h2>¿QUIENES SOMOS?</h2><img src="/images/quienes somos.png" alt="">
                    </a>
                </div>

            </div>

            <!-- Puntos -->
            <div class="dots-comunidad">
                <div class="dots">
                    <span class="dot" onclick="currentSlide(1)"></span>
                    <span class="dot" onclick="currentSlide(2)"></span>
                    <span class="dot" onclick="currentSlide(2)"></span>
                </div>
            </div>
            <!-- FIN COMUNIDAD -->

            <!-- PRODUCTOS -->
            <h3>Productos destacados</h3>

            <div class="productos">

                <article class="producto-uno">
                    <div class="img">
                        <a href="/products/detail"><img src="/images/prodcarTransportador.png" alt=""></a>
                    </div>
                    <div class="descripcion">
                        <p>$1.649</p>
                        <small>Llega mañana</small>
                        <p class="nombre">Canil Perros Gatos Xs</p>
                    </div>
                </article>

                <article class="producto-dos">
                    <div class="img">
                        <a href="/products/detail"><img src="/images/prodcarDispenser.png" alt=""></a>
                    </div>
                    <div class="descripcion">
                        <p>$980</p>
                        <small>Llega mañana</small>
                        <p class="nombre">Dispensador de agua</p>
                    </div>
                </article>

                <article class="producto-tres">
                    <div class="img">
                        <a href="/products/detail"><img src="/images/producto-hueso.jpg" alt=""></a>
                    </div>
                    <div class="descripcion">
                        <p>$350</p>
                        <small>Llega mañana</small>
                        <p class="nombre">Hueso de cuero para perros</p>
                    </div>
                </article>


                <article class="producto-cuatro">
                    <div class="img">
                        <a href="/products/detail"><img src="/images/producto-arnes.jpg" alt=""></a>
                    </div>
                    <div class="descripcion">
                        <p>$1.450</p>
                        <small>Llega mañana</small>
                        <p class="nombre">Arnés para perros</p>
                    </div>
                </article>
            
            </div>
             <!-- Puntos -->
            <div class="dots-products">
                <div class="dots">
                    <span class="dot" onclick="currentSlide(1)"></span>
                    <span class="dot" onclick="currentSlide(2)"></span>
                    <span class="dot" onclick="currentSlide(2)"></span>
                    <span class="dot" onclick="currentSlide(2)"></span>
                </div>
            </div>

            <div class="dots-products2">
                <div class="dots">
                    <span class="dot" onclick="currentSlide(1)"></span>
                    <span class="dot" onclick="currentSlide(2)"></span>
                </div>
            </div>
            <!-- FIN PRODUCTOS -->

            <!-- CARRUSEL 2 -->
            <section class="carrusel">
                <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img class="d-block w-100" src="/images/banner2.jpg" alt="First slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="/images/banner2.jpg" alt="Second slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="/images/banner3.jpg" alt="Third slide">
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </section>
            <!-- FIN CARRUSEL 2 -->

        </section>

    </main>
<!-- FOOTER -->
<%- include('./partials/footer') %> 

</body>

</html>