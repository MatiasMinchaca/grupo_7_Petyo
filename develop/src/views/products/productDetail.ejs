<!DOCTYPE html>
<html lang="es">

 <!-- HEAD -->
 <%- include('../partials/head') %> 

<body>
   
    <!-- HEADER -->
<%- include('../partials/header') %> 


        
        <div class="container">
            <a href="javascript:history.back()" class="btn btn-primary"> Volver Atr√°s</a>
            <div class="card">
                <h5 class="card-header"><%- product.name%></h5>
                <div class="card-body">
                    <div class="row">
    
                    
                    <div class="col-md-4">
                        <img  class="rounded float-left" src="/images/products/<%- product.image %>" alt="">
                    </div>
    
                    <div class="col-md-8">
                        <h5 class="card-title text-muted"><%- product.subcategory %>Codigo del producto: #<%- product.id %></h5>
                        <div>
                            <p class="precar"> $<%- product.price%> </p>
                            <p><img class="cardca" src="/svg/cardca.svg" alt="">ver medio de pago</p>
                        </div>
                        <div>
                            <p class="cla1">Seleccion peso Alimento: </p>
                            <button class="bot1">10</button>
                            <button class="bot1">15</button>
                        </div>
                        <p class="cla2">Seleccione cantidad</p>
                        <div>
                            <section class="quantity">
                                <div class="counter">
                                    <span class="down" onClick='decreaseCount(event, this)'>-</span>
                                    <input type="text" value="1">
                                    <span class="up" onClick='increaseCount(event, this)'>+</span>
                                </div>
                            </section>
                        </div>
                        <button class="bot1"> comprar </button>
                        </div>
                    </div>
                    </div>
    
                    <div class="card-footer text-muted">
                        <%- product.description %>
                    </div>
    
                </div>
              </div>
        </div>
        <br>
        

    <!-- FOOTER -->  
<%- include('../partials/footer') %> 

</body>

</html>