<!DOCTYPE html>
<html lang="es">

 <!-- HEAD -->
 <%- include('../partials/head') %> 

<body class="body-product-load">
    
   <!-- HEADER -->
<%- include('../partials/header') %> 

    <main class="product-load-container">
        <form class="form-load" action="/admin/products/edit/<%= product.id%>?_method=PUT" method="POST" enctype="multipart/form-data">
            <select type="text" placeholder="Tipo" name="category" class="select-type-product" required>
                <option value=""hidden>Categorias</option>
                <option value="1"<%- product.category == 1 ? "selected" : "" %> >Perros</option>
                <option value="2"<%- product.category == 2 ? "selected" : "" %>>Gatos</option>
                <option value="3" <%- product.category == 3 ? "selected" : "" %>>Aves</option>
                <option value="4" <%- product.category == 4 ? "selected" : "" %>>Reptiles</option>
            </select>
            <select type="text" placeholder="Tipo" name="subcategory" class="select-type-product" required>
                <option value="" hidden>Subategorias</option>
                <option value="alimento" <%- product.subcategory == "alimento" ? "selected" : "" %>>Alimento</option>
                <option value="juguetes" <%- product.subcategory == "juguetes" ? "selected" : "" %>>Juguetes</option>
                <option value="ropa" <%- product.subcategory == "ropa" ? "selected" : "" %>>Ropa</option>
                <option value="accesorios" <%- product.subcategory == "accesorios" ? "selected" : "" %>>Accesorios</option>
            </select>
            <div class="preview-image-container">
                <label class="btn-load-image-admin" for="imgInp">Seleccione una imagen</label>
                <input type='file' id="imgInp" hidden="hidden" multiple>
                <img class="preview-image" id="blah" src="/images<%= product.image %>" alt="Tu imagen" >
            </div>
            <label for="name-product-load" class="name-product-load-label">Nombre del producto</label>
            <input type="text" class="name-product-load" id="name-product-load" name="name" value="<%= product.name %>" required>
            <label for="price-load-product">Precio</label>
            <section class="price-section-load">
                <h2 class="sing-price-load">$</h2>
                <input type="number" class="price-input-load" id="price-load-product" name="price" value="<%= product.price %>" required>
            </section>
            <label for="id-load-product">Descuento</label>
            <section class="id-section-load">
                <h2 class="sing-id-load">%</h2>
                <input type="number" id="id-load-product" class="id-load-product" name="discount" value="<%= product.discount %>" required>
            </section>
            <textarea cols="10" rows="10" class="description-product-load" name="description" placeholder="DescripciÃ³n del producto" required><%= product.description %></textarea>
            <div style="display: flex;">
                <label for="btn-remove" class="btn-load-product">Eliminar</label>
                <input type="submit" value="Editar" class="btn-load-product" required>
            </div>
        </form> 
        <form action="/admin/products/delete/<%- product.id %>?_method=DELETE" method="POST">
            <div style="display: flex;">
                <button id="btn-remove" hidden>Eliminar Producto</button>
            </div>
        </form>
    </main>
    
    <!-- FOOTER -->  
    <%- include('../partials/footer') %> 

    <a href="/admin/products" class="btn-flotante">
        <i class="fas fa-undo"></i>
    </a>
    <script src="../../../js/admin.js"></script>
</body>
</html>