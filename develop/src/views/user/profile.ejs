<!DOCTYPE html>
<html lang="es">

<!-- HEAD -->
<%- include('../partials/head') %>

    <body>

        <!-- HEADER -->
        <%- include('../partials/header') %>
            <main class="userProfile">
                <div class="avatar">
                    <img src="../../../public/images/userImageProfile/<%= user.image %>" alt="">
                </div>
                <div class="userProfile-container">
                    <div class="userProfile_box">
                        <h3 class="userProfile_title">Datos personales</h3>
                        <p class="userProfile_item">Nombre: <%= user.name ? user.name : " " %>
                        </p>
                        <p class="userProfile_item">Apellido: <%= user.last_name ? user.last_name : " " %>
                        </p>
                        <p class="userProfile_item">Teléfono: <%= user.tel ? user.tel : " " %>
                        </p>
                        <p class="userProfile_item">Email: <%= user.email ? user.email : " " %>
                        </p>
                        <p class="userProfile_item">Nombre de Mascota: <%= user.namePet ? user.namePet : " " %>
                        </p>
                        <p class="userProfile_item">Descripcion: <%= user.biography ? user.biography : " " %>
                        </p>
                    </div>
                    <div class="userProfile_box">
                        <h3 class="userProfile_title">Datos de contacto</h3>
                        <p class="userProfile_item">Dirección: <%= user.address ? user.address : " " %>
                        </p>
                        <p class="userProfile_item">Código postal: <%= user.pc ? user.pc : " " %>
                        </p>
                        <p class="userProfile_item">Provincia: <%= user.province ? user.province : " " %>
                        </p>
                        <p class="userProfile_item">Localidad: <%= user.city ? user.city : " " %>
                        </p>
                    </div>
                    <a href="/users/profile/editProfile/<%= user.id %>" class="btn btn-ad-primary">EDITAR DATOS</a>
                </div>

            </main>

            <!-- FOOTER -->
            <%- include('../partials/footer') %>

                <!-- JavaScript -->
                <script src="/js/users.js"></script>

    </body>


</html>