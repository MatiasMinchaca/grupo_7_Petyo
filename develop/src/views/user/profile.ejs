<!DOCTYPE html>
<html lang="es">

<!-- HEAD -->
<%- include('../partials/head') %>

    <body>

        <!-- HEADER -->
        <%- include('../partials/header') %>
            <main class="userProfile">
                <div class="avatar">
                    <img src="/images/userImageProfile/<%= user.image %>" alt="">
                </div>
                <div class="userProfile-container">
                    <div class="userProfile_box">
                        <h3 class="userProfile_title">Datos personales</h3>
                        <p class="userProfile_item">Nombre: <%= user.name ? user.name : " " %>
                        </p>
                        <p class="userProfile_item">Apellido: <%= user.lastName ? user.lastName : " " %>
                        </p>
                        <p class="userProfile_item">Teléfono: <%= user.telephone ? user.telephone : " " %>
                        </p>
                        <p class="userProfile_item">Email: <%= user.email ? user.email : " " %>
                        </p>
                        <p class="userProfile_item">Nombre de Mascota: <%= user.namePet ? user.namePet : " " %>// Hay que arreglar porque no esta trayendo lo que el nombre de la mascota de la base de datos
                        </p>
                        <p class="userProfile_item">Biografia: <%= user.biography ? user.biography : " " %>
                        </p>
                    </div>
                    <div class="userProfile_box">
                        <h3 class="userProfile_title">Datos de contacto</h3>
                        <p class="userProfile_item">Dirección: <%= address !== null && address.street ? address.street : " " %>
                        </p>
                        <p class="userProfile_item">Código postal: <%= address !== null && address.postal_code ? address.postalCode : " " %>
                        </p>
                        <p class="userProfile_item">Provincia: <%= address !== null && address.province ? address.province : " " %>
                        </p>
                        <p class="userProfile_item">Localidad: <%= address !== null && address.city ? address.city : " " %>
                        </p>
                    </div>
                    <a href="/users/profile/editProfile/<%= user.id %>" class="btn btn-ad-primary">EDITAR PERFIL</a>
                </div>

            </main>

            <!-- FOOTER -->
            <%- include('../partials/footer') %>

                <!-- JavaScript -->
                <script src="/js/users.js"></script>

    </body>


</html>